@model List<FlyFashion.Models.Item>

@{
    Layout = Layout = "_Layout";
}


<!DOCTYPE html>
<html>
<head>
    <title>Bootstrap Example</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
    
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
    <link rel="stylesheet" href="~/css/index.css">
    <style>
        body {
            overflow-y: scroll;
        }

        .carousel {
            width: 640px;
            height: 360px;
            margin: 0 auto;
            overflow: hidden;
        }
    </style>
</head>
<body>

    <div class="container">

        <div>
            <h1 class="text-center m-lg-5 text-primary">♥ Mix & Match ♥</h1>
        </div>

        <div id="myCarousel" class="carousel slide" data-ride="carousel">
            <!-- Indicators -->
            

            <!-- Wrapper for slides -->
            <div class="carousel-inner">

                <div class="item active">
                    <img src="~/images/topstitle.png" alt="Los Angeles" style="width:100%;">
                </div>

                @foreach (var item in Model)
                {

                    if (item.Type.ToUpper() == "TOPS")
                    {
                        <div class="item">
                            <img src=@item.Image alt="" style="width:100%;">
                        </div>
                    }
                    
                }


            </div>

            <!-- Left and right controls -->
            <a class="left carousel-control" href="#myCarousel" data-slide="prev">
                <span class="glyphicon glyphicon-chevron-left"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="right carousel-control" href="#myCarousel" data-slide="next">
                <span class="glyphicon glyphicon-chevron-right"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>

        <!-- *******************************-->

        <div>
            <p>



            </p>
        </div>


        <div id="myCarousel1" class="carousel slide align-content-center" data-ride="carousel">
            <!-- Indicators -->
           

            <!-- Wrapper for slides -->
            <div class="carousel-inner">
                <div class="item active">
                    <img src="~/images/bottomstitle.png" alt="Los Angeles" style="width:100%;">
                </div>

                @foreach (var item in Model)
                {
                    if (item.Type.ToUpper() == "BOTTOMS")
                    {
                        <div class="item">
                            <img src=@item.Image alt="" style="width:100%;">
                        </div>
                    }
                }
            </div>

            <!-- Left and right controls -->
            <a class="left carousel-control" href="#myCarousel1" data-slide="prev">
                <span class="glyphicon glyphicon-chevron-left"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="right carousel-control" href="#myCarousel1" data-slide="next">
                <span class="glyphicon glyphicon-chevron-right"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    </div>

    <footer class="text-center m-5 text-primary">
        ♥ Thrift the Fit Generator © 2019 ♥
    </footer>

</body>
</html>