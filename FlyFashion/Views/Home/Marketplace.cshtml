@model List<FlyFashion.Models.Item>
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Marketplace</title>
    <link rel="stylesheet" href="~/twitter-bootstrap/css/bootstrap.css" />
</head>
<body>

    <div class="container-fluid">


        <h1 class="display-4 text-center font-weight-bolder">Marketplace</h1>


        <div class="row justify-content-center">

            @foreach (var item in Model)
            {

                <div class="card text-left" style="width: 20rem; margin: 30px">
                    
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title">@item.Title</h5>
                        
                        <p class="card-text">@item.Description</p>
                      
                    </div>
                </div>
            }
        </div>

    </div>


</body>
</html>
